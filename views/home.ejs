<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test Website</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header class="header">
      <h1>Menghitung Ongkir</h1>
    </header>
    <form action="/" method="POST">
      <section class="assignment">
        <div>
          <h3 class="mb-3">Kota Asal</h3>
          <div class="row">
            <div class="col-sm-6">
              <div class="mb-3 text-start">
                <label for="provAsal" class="form-label">Provinsi</label>
                <select
                  name="provAsal"
                  id="provAsal"
                  class="form-select"
                  required
                >
                  <option value="" selected class="d-none">
                    Silahkan pilih...
                  </option>
                  <% for( const prov of provinsi ) { %>
                  <option value="<%= prov.province_id %>">
                    <%= prov.province %>
                  </option>
                  <% } %>
                </select>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="mb-3 text-start">
                <label for="kotaAsal" class="form-label">Kota</label>
                <select
                  name="kotaAsal"
                  id="kotaAsal"
                  class="form-select"
                  disabled
                  required
                >
                  <option class="d-none" value="" selected>
                    Silahkan pilih kota
                  </option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="assignment">
        <div>
          <h3 class="mb-3">Kota Tujuan</h3>
          <div class="row">
            <div class="col-sm-6">
              <div class="mb-3 text-start">
                <label for="provTujuan" class="form-label">Provinsi</label>
                <select
                  name="provTujuan"
                  id="provTujuan"
                  class="form-select"
                  required
                >
                  <option selected class="d-none" value="">
                    Silahkan pilih...
                  </option>
                  <% for( const prov of provinsi ) { %>
                  <option value="<%= prov.province_id %>">
                    <%= prov.province %>
                  </option>
                  <% } %>
                </select>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="mb-3 text-start">
                <label for="kotaTujuan" class="form-label">Kota</label>
                <select
                  name="kotaTujuan"
                  id="kotaTujuan"
                  class="form-select"
                  disabled
                  required
                >
                  <option class="d-none" value="" selected>
                    Silahkan pilih kota
                  </option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="assignment">
        <div class="row">
          <div class="col-sm-6">
            <div class="mb-3 text-start">
              <label for="berat" class="form-label">Berat (Gram)</label>
              <input
                type="number"
                name="berat"
                id="berat"
                class="form-control"
                required
              />
            </div>
          </div>
          <div class="col-sm-6">
            <div class="mb-3 text-start">
              <label for="kurir" class="form-label">Kurir</label>
              <select name="kurir" id="kurir" class="form-select" required>
                <option class="d-none" value="">Silahkan Pilih</option>
                <option value="jne">JNE</option>
                <option value="pos">POS Indonesia</option>
                <option value="tiki">Tiki</option>
              </select>
            </div>
          </div>
        </div>
      </section>
      <div class="text-center">
        <button class="btn btn-primary fs-4" type="submit">Cek Ongkir</button>
        <a href="/test" class="btn btn-primary fs-4">Test ke dua</a>
      </div>
    </form>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script>
      const kotaJSON = `<%- JSON.stringify(kota) %>`;
      const kota = JSON.parse(kotaJSON);
    </script>
    <script src="app.js"></script>
  </body>
</html>
